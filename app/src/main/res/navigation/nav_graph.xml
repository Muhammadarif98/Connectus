<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginInputFragment">

    <fragment
        android:id="@+id/loginInputFragment"
        android:name="com.example.connectus.ui.Fragments.LoginInputFragment"
        android:label="fragment_login_input_fragment"
        tools:layout="@layout/fragment_login_input_fragment" >
        <action
            android:id="@+id/action_loginInputFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginInputFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_loginInputFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.connectus.ui.Fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginInputFragment"
            app:destination="@id/loginInputFragment" />
        <action
            android:id="@+id/action_registerFragment_to_loginInputFragment2"
            app:destination="@id/loginInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.connectus.ui.Fragments.StartFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_startFragment_to_loginInputFragment"
            app:destination="@id/loginInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.connectus.ui.Fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.connectus.ui.Fragments.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.connectus.ui.Fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>